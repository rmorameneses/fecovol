<?php
	session_start();
	
	if (isset($_SESSION['vengode'])) 
	{
		if($_SESSION['vengode']=="homepage") //si estoy en homepage y me voy a local host
		{
			echo"<META HTTP-EQUIV='REFRESH' CONTENT='0;URL=http://localhost/repositorio/homepage/'>";
		}
		if($_SESSION['vengode']=="login") //si logueo mal
		{
			echo"<div class='alert alert-danger'>
				<strong>Oh snap!</strong> check your username and password and try submitting again.
				</div>";
			
			$_SESSION['logueado']="no";
			$_SESSION['usuario']="";
			$_SESSION['vengode']="localhost";
		}
		if($_SESSION['vengode']=="registrarusuario") //si me registro mal
		{
			echo"<div class='alert alert-danger'>
				<strong>Oh snap!</strong> It seems that this users already exist, try other.
				</div>";
			
			$_SESSION['logueado']="no";
			$_SESSION['usuario']="";
			$_SESSION['vengode']="localhost";
		}
	}
	else
	{
		$_SESSION['logueado']="no";
		$_SESSION['usuario']="";
		$_SESSION['vengode']="localhost";
	}
?>

